@model AHNet.Web.Features.Admin.Admin.ViewModels.CreateContentTagViewModel

@{
    ViewBag.Title = "create content tag";
}

<form asp-controller="admin" asp-action="createcontenttag">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-offset-2 col-md-10 control-label"></label>
        <div class="col-md-offset-2 col-md-10 control-label">
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 control-label">
            <input type="submit" value="Create" class="btn btn-default"/>
        </div>
    </div>

</form>
