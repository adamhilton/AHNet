@model AHNet.Web.Features.Admin.Admin.ViewModels.EditContentTagViewModel

@{
    ViewBag.Title = $"edit - {Model.Name} tag";
}

<form asp-controller="admin" asp-action="editcontenttag">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input asp-for="Id" type="hidden" />

    <div class="form-group">
        <label asp-for="Name" class="col-md-offset-2 col-md-10 control-label"></label>
        <div class="col-md-offset-2 col-md-10 control-label">
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-xs-2 control-label">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>

        <div class="pull-right control-label">
            <a asp-controller="admin" asp-action="deletecontenttag" asp-route-name="@Model.Name" class="btn btn-danger">Delete</a>
        </div>
    </div>

</form>